<div id="success"class="alert alert-success {{#if noMessage}}hidden{{/if}}"> 
  {{successMsg}}
</div>
{{#each products}}
  <div class="row">
    {{#each this}}
        <div class="col-md-4">
           <div class="thumbnail">
            <img src="{{this.imagePath}}" alt="..." height="100" >
            <div class="caption">
              <h3>{{this.title}}</h3> 
              <div class="thumbnail-small-font">
                {{this.description}}
              </div>
              <div class="margin-top">
                <span>price: {{this.price}}</span>    
                <a href="/addToCart/{{this._id}}" class="btn btn-success">Add to shopping cart</a>
              </div>         
            </div>
          </div>
        </div>         
    {{/each}}
  </div>
{{/each}}

